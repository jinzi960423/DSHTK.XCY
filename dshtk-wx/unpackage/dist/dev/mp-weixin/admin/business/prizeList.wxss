
.icons {
		position: fixed;
		margin-top: 800rpx;
		z-index: 999;
		margin-left: -15rpx;
		width: 100%;
		text-align: right;
}
.mini-btn {
		float: right;
		/* 让Button向右浮动 */
		margin-left: 10rpx;
		/* 如果需要边距，可以添加左边距 */
}
.banner {
		height: 360rpx;
		overflow: hidden;
		position: relative;
		background-color: #ccc;
}
.banner-img {
		width: 100%;
}
.banner-title {
		max-height: 84rpx;
		overflow: hidden;
		position: absolute;
		left: 30rpx;
		bottom: 30rpx;
		width: 90%;
		font-size: 32rpx;
		font-weight: 400;
		line-height: 42rpx;
		color: white;
		z-index: 11;
}
.uni-media-list-logo {
		width: 90rpx;
		height: 70rpx;
}
.uni-media-list-body {
		height: auto;
		justify-content: space-around;
}
.uni-media-list-text-top {
		height: 50rpx;
		font-size: 28rpx;
		display: flex;
		flex-direction: row;
		flex-direction: row;
		justify-content: space-between;
		color: #777;
}
.uni-media-list-text-bottom {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		color: #777;
}
