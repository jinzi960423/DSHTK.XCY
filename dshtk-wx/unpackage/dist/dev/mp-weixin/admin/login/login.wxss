
.login-page {
		padding: 20px;
}
.login-container {
		display: flex;
		flex-direction: column;
		align-items: center;
}
.input-field {
		width: 100%;
		color: #303133;
		font-size: 15px;
		text-align: left;
		line-height: 26px;

		border-width: 0.5px !important;
		border-color: #dadbde !important;
		border-style: solid;
		padding-top: 6px;
		padding-bottom: 6px;
		padding-left: 9px;
		padding-right: 9px;
}
.submit-button {
		margin-top: 20px;
		width: 100%;
		background-color: #2979ff;
		color: #fff;
		border: none;
		border-radius: 4px;
}
